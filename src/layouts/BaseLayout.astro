---
import Header from "../components/Header.astro";

interface Props {
  title: string;
  description?: string;
  pt?: number;
  p?: number;
}

const {
  title,
  description = "Aadish Verma's personal website and blog",
  pt = 24,
  p = 20,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lora:wght@400;500;600;700&family=Source+Sans+Pro:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="text-text font-sans">
    <Header />
    <main
      class="h-full w-full"
      style={`padding: ${p / 4}rem; padding-top: ${pt / 4}rem`}
    >
      <slot />
    </main>
  </body>
</html>
